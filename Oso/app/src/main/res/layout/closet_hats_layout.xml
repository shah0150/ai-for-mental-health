<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_layout_padding">

    <ImageView
        android:id="@+id/closet_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oso_hat_closet"
        android:onClick="tabClosetHatClick"
        android:layout_margin="@dimen/tab_item_margin"/>

    <ImageView
        android:clickable="false"
        android:visibility="invisible"
        android:id="@+id/closet_headbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_oso_closet_headbow_layout_icon"
        android:onClick="tabClosetHeadbowClick"
        android:layout_toEndOf="@id/closet_hat"
        android:layout_margin="@dimen/tab_item_margin"/>

</RelativeLayout>
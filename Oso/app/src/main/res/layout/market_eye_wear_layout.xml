<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tab_layout_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/market_monocle_layout">

        <ImageView
            android:id="@+id/store_monocle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_market_face_icon" />

        <ImageView
            android:id="@+id/monocle_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_oso_sold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/monocle_sold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:id="@+id/paw_points_layout_1">

            <ImageView
                android:id="@+id/paw_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_oso_paw_pink" />

            <TextView
                android:id="@+id/paw_points_amount_monocle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/paw_icon_1"
                android:text="25"
                android:textColor="@color/theme1_colorAccent"
                android:textSize="15dp" />


        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>